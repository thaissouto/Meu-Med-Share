@model MeuMedShare.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Cadastro - MeuMedShare";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body class="login-body">
    <div class="login-wrapper">
        <div class="login-left">
            <div class="logo-area">
                <img src="~/img/logotipo.png" alt="MeuMedShare" />
                <h1 class="logo-text">MeuMedShare</h1>
            </div>
            <p class="tagline">Fa√ßa parte da nossa rede de solidariedade</p>
            
            <div class="messages">
                @Html.ValidationSummary(false, "", new { @class = "validation-summary-errors" })
            </div>

            <form asp-action="Register" method="post" class="login-form">
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <select asp-for="PerfilTipo" class="form-select">
                        <option value="">Selecione seu tipo de perfil</option>
                        <option value="Doador">Doador - Quero doar medicamentos</option>
                        <option value="Instituicao">Institui√ß√£o - Preciso receber doa√ß√µes</option>
                    </select>
                    <span asp-validation-for="PerfilTipo" class="field-validation-error"></span>
                </div>
                
                <div class="form-group">
                    <input asp-for="Email" placeholder="E-mail" autocomplete="username" />
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>
                
                <div class="form-group">
                    <input asp-for="Password" type="password" placeholder="Senha" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>
                
                <div class="form-group">
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirme a senha" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                </div>
                
                <div class="actions">
                    <button type="submit" class="btn btn-primario">Cadastrar-se</button>
                    <a asp-action="Login" class="btn btn-secundario">J√° tenho conta</a>
                </div>
            </form>

            <div class="forgot">
                <a asp-action="Login">‚Üê Voltar ao login</a>
            </div>
        </div>
        
        <div class="login-right">
            <img src="~/img/remedios.png" alt="Medicamentos" />
        </div>
    </div>
    
    <footer class="login-footer"></footer>
    
    <div class="footer-info">
        <div>
            üìç Av. Dom Jos√© Gaspar, 500 Cora√ß√£o Eucar√≠stico ‚Äì Belo Horizonte ‚Äì MG 30535-901, Brasil<br />
            üìû (31) 3319-4444 ‚Ä¢ ‚úâ contato@meumedshare.com
        </div>
        <div class="sobre-nos">
            <a asp-controller="Home" asp-action="Privacy">
                Sobre n√≥s
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
    </environment>
</body>
</html>