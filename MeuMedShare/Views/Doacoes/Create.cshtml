@model MeuMedShare.ViewModels.Doacao.DoacaoCreateViewModel
@{
    ViewData["Title"] = "Nova Doação - MeuMedShare";
}

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1><i class="fas fa-heart me-3"></i>Nova Doação</h1>
                <p class="mb-0">Compartilhe medicamentos e ajude quem precisa</p>
            </div>
            <div class="col-md-4 text-md-end">
                <div class="d-flex align-items-center justify-content-md-end">
                    <i class="fas fa-pills fs-1 text-white-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
            
            <form asp-action="Create" method="post" enctype="multipart/form-data" id="doacaoForm">
                
                <!-- Card Informações do Medicamento -->
                <div class="card shadow-custom mb-4">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-capsules me-3 text-primary fs-5"></i>
                            <h5 class="mb-0 fw-bold">Informações do Medicamento</h5>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="NomeMedicamento" class="form-label fw-semibold">
                                    <i class="fas fa-prescription-bottle me-2"></i>Nome do Medicamento *
                                </label>
                                <input asp-for="NomeMedicamento" class="form-control form-control-lg" 
                                       placeholder="Ex: Dipirona 500mg" />
                                <span asp-validation-for="NomeMedicamento" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="DataValidade" class="form-label fw-semibold">
                                    <i class="fas fa-calendar-alt me-2"></i>Data de Validade *
                                </label>
                                <input asp-for="DataValidade" type="date" class="form-control form-control-lg" 
                                       min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="DataValidade" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Apenas medicamentos com validade superior a 30 dias
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Quantidade" class="form-label fw-semibold">
                                    <i class="fas fa-sort-numeric-up me-2"></i>Quantidade *
                                </label>
                                <div class="input-group">
                                    <input asp-for="Quantidade" type="number" class="form-control form-control-lg" 
                                           placeholder="0" min="1" />
                                    <span class="input-group-text">unidades/comprimidos</span>
                                </div>
                                <span asp-validation-for="Quantidade" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-camera me-2"></i>Foto do Medicamento
                                </label>
                                <input asp-for="Foto" type="file" accept="image/*" class="form-control form-control-lg" 
                                       id="fotoInput" />
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Adicione uma foto clara da embalagem (opcional)
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <label asp-for="Descricao" class="form-label fw-semibold">
                                    <i class="fas fa-align-left me-2"></i>Descrição Adicional
                                </label>
                                <textarea asp-for="Descricao" class="form-control" rows="4" 
                                          placeholder="Descreva o estado do medicamento, dosagem, laboratório, etc. (opcional)"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card Documentação -->
                <div class="card shadow-custom mb-4">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-file-medical me-3 text-secondary fs-5"></i>
                            <h5 class="mb-0 fw-bold">Documentação</h5>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-12">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-file-prescription me-2"></i>Receita Médica
                                </label>
                                <input asp-for="Receita" type="file" accept="application/pdf,image/*" 
                                       class="form-control form-control-lg" id="receitaInput" />
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Para medicamentos controlados, anexe a receita (PDF ou imagem)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card Destinatário -->
                <div class="card shadow-custom mb-4">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-hospital me-3 text-success fs-5"></i>
                            <h5 class="mb-0 fw-bold">Destinatário</h5>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-12">
                                <label asp-for="InstituicaoId" class="form-label fw-semibold">
                                    <i class="fas fa-building me-2"></i>Instituição Beneficiária *
                                </label>
                                <select asp-for="InstituicaoId" class="form-select form-select-lg" 
                                        asp-items="@(new SelectList(Model?.InstituicoesDisponiveis ?? new List<MeuMedShare.Models.Domain.Instituicao>(), "Id", "RazaoSocial"))">
                                    <option value="">Selecione uma instituição...</option>
                                </select>
                                <span asp-validation-for="InstituicaoId" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Escolha a instituição que receberá sua doação
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ações -->
                <div class="card shadow-custom">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-shield-check fs-3 text-success me-3"></i>
                                    <div>
                                        <h6 class="mb-1 fw-bold">Doação Segura</h6>
                                        <small class="text-muted">Suas informações são protegidas e a doação é rastreável</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                        <i class="fas fa-arrow-left me-2"></i>Cancelar
                                    </a>
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-heart me-2"></i>Confirmar Doação
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Preview da imagem
        document.getElementById('fotoInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // Validar tamanho do arquivo (5MB máximo)
                if (file.size > 5 * 1024 * 1024) {
                    alert('A imagem deve ter no máximo 5MB');
                    e.target.value = '';
                    return;
                }
            }
        });

        // Validação da data de validade
        document.getElementById('DataValidade').addEventListener('change', function(e) {
            const selectedDate = new Date(e.target.value);
            const today = new Date();
            const thirtyDaysFromNow = new Date(today.getTime() + (30 * 24 * 60 * 60 * 1000));
            
            if (selectedDate < thirtyDaysFromNow) {
                alert('A data de validade deve ser superior a 30 dias a partir de hoje.');
                e.target.focus();
            }
        });

        // Animação de envio do formulário
        document.getElementById('doacaoForm').addEventListener('submit', function(e) {
            const submitBtn = e.target.querySelector('button[type="submit"]');
            submitBtn.classList.add('loading');
            submitBtn.disabled = true;
        });
    </script>
}